{
    "extends": "./tsconfigs/tsconfig-base.json",
    "compilerOptions": {
        "paths": {
            "@root/*": ["./*"],
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*",
        "__fixtures__/**/*",
        "__tests__/**/*",
        "jest.setup.ts",
        "tests/**/*"
    ],
    "exclude": [
        "src/manifest-input/browser"
    ],
    // "references": [
    //   { "path": "src/manifest-input/browser" }
    // ]
    "typeAcquisition": {
        "enable": true
    }
}
